{% extends "base.twig" %}
{% set pageTitle = entry.seoTitle ? entry.seoTitle : entry.title %}
{% set pageDescription = entry.seoDescription ? entry.seoDescription : entry.title %}
{% set articlesToShow = craft.entries()
    .section('articles')
    .orderBy('calendarDate desc')
    .all() %}

{% block content %}
    {% include 'parts/_breadcrumbs' %}
    {% include 'parts/_pageheader' with {'headertext': entry.title} %}

    <section class="contentSection">
        <div class="container">
            <div class="tiles row">
                {% for article in articlesToShow %} 
                    {% include('parts/_articleTile') with { 
                        'article': article,
                        'extraclass': 'col-lgx-3 col-md-6',
                        } %}            
                {% endfor %}

                <div class="tileItem emptyTile"></div>
            </div>
        </div>
    </section>
{% endblock %}

{% block subcontent %}
    {% include 'parts/_bottomForm' %}
{% endblock %}
