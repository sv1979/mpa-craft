{% set blockHeader = block.header %}
{% set blockText = block.textContent %}
{% set className = extraclass is defined ? extraclass : '' %}

<div class="contentBlock fullWidthContent {{className}}">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 textPart">
                <div class="inner">
                    {% if blockHeader != '' %}
                        <h4 class="blockHeader">{{blockHeader}}</h4>
                    {% endif %}
                    {% if blockText != '' %}
                        <div class="blockText">{{blockText}}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>